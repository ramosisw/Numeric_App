<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.wayproyect.numeric_app">
    <uses-sdk android:minSdkVersion="8"/>
    <application android:icon="@drawable/icono" android:label="@string/app_name">
        <activity android:name=".vistas.Splash_Screen" android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".vistas.Menu"
                  android:screenOrientation="portrait"
                  android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".vistas.About"
                  android:screenOrientation="portrait"
                  android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".vistas.biseccion.Biseccion_Auto"
                  android:theme="@style/Numeric_App_Theme_TitleBar"
                  android:label="@string/biseccion_automatico"
                  android:screenOrientation="portrait"/>
        <activity android:name=".vistas.biseccion.Biseccion_Manual"
                  android:theme="@style/Numeric_App_Theme_TitleBar"
                  android:label="@string/biseccion_manual"
                  android:screenOrientation="portrait"/>
        <activity android:name=".vistas.regla_falsa.ReglaFalsa_Auto"
                  android:theme="@style/Numeric_App_Theme_TitleBar"
                  android:label="@string/regla_falsa_automatico"
                  android:screenOrientation="portrait"/>
        <activity android:name=".vistas.regla_falsa.ReglaFalsa_Manual"
                  android:theme="@style/Numeric_App_Theme_TitleBar"
                  android:label="@string/regla_falsa_manual"
                  android:screenOrientation="portrait"/>
        <activity android:name=".vistas.newton.Newton_Manual"
                  android:theme="@style/Numeric_App_Theme_TitleBar"
                  android:label="@string/newton_manual"
                  android:screenOrientation="portrait"/>
        <activity android:name=".vistas.secante.Secante_manual"
                  android:theme="@style/Numeric_App_Theme_TitleBar"
                  android:label="@string/secante_manual"
                  android:screenOrientation="portrait"/>
    </application>
</manifest>
