<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/radialback">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F(x):"
                android:id="@+id/textView" android:layout_gravity="left|center_vertical" android:textColor="#4e4e4e"
                android:textSize="16dp" android:textStyle="bold"/>
        <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:id="@+id/txt_fx" android:inputType="text|textNoSuggestions"
                  android:autoText="false"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            >
        <TextView android:layout_width="25dp" android:layout_height="wrap_content" android:text="A:"
                  android:id="@+id/textView3" android:layout_gravity="left|center_vertical"
                  android:textColor="#4e4e4e"
                  android:textSize="16dp" android:textStyle="bold"/>
        <EditText android:layout_width="80dp" android:layout_height="wrap_content" android:id="@+id/txt_a"
                  android:autoText="false" android:layout_gravity="center" android:inputType="numberSigned"
                  android:numeric="integer|signed"/>
        <TextView android:layout_width="25dp" android:layout_height="wrap_content" android:text="B:"
                  android:id="@+id/textView4" android:layout_gravity="center"
                  android:textColor="#4e4e4e"
                  android:textSize="16dp" android:textStyle="bold" android:layout_marginLeft="10dp"/>
        <EditText android:layout_width="80dp" android:layout_height="wrap_content" android:id="@+id/txt_b"
                  android:autoText="false" android:inputType="numberSigned" android:numeric="integer|signed"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:layout_gravity="center"
                  android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:id="@+id/linearLayout"
            >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ER:"
                  android:id="@+id/textView1" android:layout_gravity="left|center_vertical" android:textColor="#4e4e4e"
                  android:textSize="16dp" android:textStyle="bold"/>
        <EditText android:layout_width="120dp" android:layout_height="wrap_content"
                  android:id="@+id/txt_er"
                  android:layout_gravity="center_vertical|left"
                  android:inputType="numberDecimal"/>
        <TextView android:layout_width="40dp" android:layout_height="wrap_content" android:text="%"
                  android:id="@+id/textView2" android:layout_gravity="left|center_vertical" android:textColor="#4e4e4e"
                  android:textSize="16dp" android:textStyle="bold"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Calcular"
                android:id="@+id/btn_calcular" style="@style/ImageButtonNumeric_App_Theme"
                android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="100dp"
                  android:layout_gravity="center" android:id="@+id/linearLayout1"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp" android:id="@+id/ly_result1">
        <TextView android:layout_width="90dp" android:layout_height="wrap_content" android:text="Resultado:"
                  android:id="@+id/textView7" android:layout_gravity="center" android:textColor="#3e3e3e"
                  android:textStyle="bold" android:gravity="right" android:layout_marginRight="5dp"
                  android:textSize="17dp"/>
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="0000000"
                  android:id="@+id/txt_xr_r" android:layout_gravity="center" android:textColor="#343434"
                  android:textSize="17dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp" android:id="@+id/ly_result2" android:layout_marginTop="5dp">
        <TextView android:layout_width="90dp" android:layout_height="wrap_content" android:text="ER:"
                  android:id="@+id/textView5" android:layout_gravity="center" android:textColor="#3e3e3e"
                  android:textStyle="bold" android:gravity="right" android:layout_marginRight="5dp"
                  android:textSize="17dp"/>
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="0.02%"
                  android:id="@+id/txt_er_r" android:layout_gravity="center" android:textColor="#343434"
                  android:textSize="17dp"/>
    </LinearLayout>
</LinearLayout>