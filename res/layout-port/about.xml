<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/radialback"
        >

    <TextView style="@style/sub_title" android:text="@string/about" android:id="@+id/textView3"
              android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/acerca_de"
            android:id="@+id/textView4" android:layout_gravity="center_horizontal|right" android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" android:textColor="#525252" android:textSize="16dp"
            android:paddingBottom="20dp" android:singleLine="false"/>
    <TextView
            android:text="@string/developers"
            android:id="@+id/textView2"
            style="@style/sub_title" android:singleLine="false"/>
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                    style="@style/developer_item" android:paddingLeft="10dp" android:paddingBottom="5dp"
                    android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView" android:background="@drawable/profile_01"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_marginTop="10dp">
                    <TextView
                            android:text="@string/name_colaborador1"
                            android:id="@+id/textView"
                            style="@style/about_name_dev" android:singleLine="true"/>
                    <TextView
                            android:text="@string/correo_colaborador1"
                            android:id="@+id/textView1"
                            style="@style/about_email_dev" android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout style="@style/developer_item" android:paddingLeft="10dp" android:layout_width="fill_parent"
                          android:layout_height="wrap_content" android:id="@+id/linearLayout"
                          android:paddingBottom="5dp">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:id="@+id/imageView1"
                           android:background="@drawable/profile_01"/>
                <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                              android:layout_height="fill_parent" android:layout_marginTop="10dp">
                    <TextView style="@style/about_name_dev" android:text="@string/name_colaborador2"
                              android:id="@+id/textView5"
                              android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView style="@style/about_email_dev" android:text="@string/correo_colaborador2"
                              android:id="@+id/textView6" android:autoLink="email" android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout style="@style/developer_item" android:paddingLeft="10dp" android:layout_width="fill_parent"
                          android:layout_height="wrap_content" android:id="@+id/linearLayout1"
                          android:paddingBottom="5dp">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:id="@+id/imageView2"
                           android:background="@drawable/profile_01"/>
                <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                              android:layout_height="fill_parent" android:layout_marginTop="10dp">
                    <TextView style="@style/about_name_dev" android:text="@string/name_colaborador3"
                              android:id="@+id/textView7"
                              android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView style="@style/about_email_dev" android:text="@string/correo_colaborador3"
                              android:id="@+id/textView8" android:autoLink="email" android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout style="@style/developer_item" android:paddingLeft="10dp" android:layout_width="fill_parent"
                          android:layout_height="wrap_content" android:id="@+id/linearLayout2"
                          android:paddingBottom="5dp">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:id="@+id/imageView3"
                           android:background="@drawable/profile_01"/>
                <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                              android:layout_height="fill_parent" android:layout_marginTop="10dp">
                    <TextView style="@style/about_name_dev" android:text="@string/name_colaborador4"
                              android:id="@+id/textView9"
                              android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView style="@style/about_email_dev" android:text="@string/correo_colaborador4"
                              android:id="@+id/textView10" android:autoLink="email" android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>